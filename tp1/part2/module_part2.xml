<?xml version="1.0" encoding="UTF-8"?>
<project name="module_part2" default="compile.module.part2">
  <dirname property="module.part2.basedir" file="${ant.file.module_part2}"/>
  
  <property name="module.jdk.home.part2" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.part2" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.part2" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.part2" value="-encoding UTF-8 -source 7 -target 7 ${compiler.args}"/>
  
  <property name="part2.output.dir" value="${module.part2.basedir}/out/production/part2"/>
  <property name="part2.testoutput.dir" value="${module.part2.basedir}/out/test/part2"/>
  
  <path id="part2.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="part2.module.production.classpath">
    <path refid="${module.jdk.classpath.part2}"/>
  </path>
  
  <path id="part2.runtime.production.module.classpath">
    <pathelement location="${part2.output.dir}"/>
  </path>
  
  <path id="part2.module.classpath">
    <path refid="${module.jdk.classpath.part2}"/>
    <pathelement location="${part2.output.dir}"/>
  </path>
  
  <path id="part2.runtime.module.classpath">
    <pathelement location="${part2.testoutput.dir}"/>
    <pathelement location="${part2.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.part2">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.part2">
    <patternset refid="excluded.from.module.part2"/>
  </patternset>
  
  <path id="part2.module.sourcepath">
    <dirset dir="${module.part2.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.part2" depends="compile.module.part2.production,compile.module.part2.tests" description="Compile module part2"/>
  
  <target name="compile.module.part2.production" depends="register.custom.compilers" description="Compile module part2; production classes">
    <mkdir dir="${part2.output.dir}"/>
    <javac2 destdir="${part2.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.part2}/javac">
      <compilerarg line="${compiler.args.part2}"/>
      <bootclasspath refid="part2.module.bootclasspath"/>
      <classpath refid="part2.module.production.classpath"/>
      <src refid="part2.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.part2"/>
    </javac2>
    
    <copy todir="${part2.output.dir}">
      <fileset dir="${module.part2.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.part2.tests" depends="register.custom.compilers,compile.module.part2.production" description="compile module part2; test classes" unless="skip.tests"/>
  
  <target name="clean.module.part2" description="cleanup module">
    <delete dir="${part2.output.dir}"/>
    <delete dir="${part2.testoutput.dir}"/>
  </target>
</project>