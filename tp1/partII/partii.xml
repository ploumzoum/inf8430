<?xml version="1.0" encoding="UTF-8"?>
<project name="partii" default="all">
  
  
  <property file="partii.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/charsets.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/compilefontconfig.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/ext/dnsns.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/ext/icedtea-sound.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/ext/java-atk-wrapper.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/ext/localedata.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/ext/sunjce_provider.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/ext/sunpkcs11.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/ext/zipfs.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/javazic.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/jce.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/jsse.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/management-agent.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/resources.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/rhino.jar"/>
      <include name="../java-1.7.0-openjdk-amd64/jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module partII -->
  
  <dirname property="module.partii.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.partii" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.partii" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.partii" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.partii" value="-encoding UTF-8 -source 7 -target 7 ${compiler.args}"/>
  
  <property name="partii.output.dir" value="${module.partii.basedir}/out/production/partII"/>
  <property name="partii.testoutput.dir" value="${module.partii.basedir}/out/test/partII"/>
  
  <path id="partii.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="partii.module.production.classpath">
    <path refid="${module.jdk.classpath.partii}"/>
  </path>
  
  <path id="partii.runtime.production.module.classpath">
    <pathelement location="${partii.output.dir}"/>
  </path>
  
  <path id="partii.module.classpath">
    <path refid="${module.jdk.classpath.partii}"/>
    <pathelement location="${partii.output.dir}"/>
  </path>
  
  <path id="partii.runtime.module.classpath">
    <pathelement location="${partii.testoutput.dir}"/>
    <pathelement location="${partii.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.partii">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.partii">
    <patternset refid="excluded.from.module.partii"/>
  </patternset>
  
  <path id="partii.module.sourcepath">
    <dirset dir="${module.partii.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.partii" depends="compile.module.partii.production,compile.module.partii.tests" description="Compile module partII"/>
  
  <target name="compile.module.partii.production" depends="register.custom.compilers" description="Compile module partII; production classes">
    <mkdir dir="${partii.output.dir}"/>
    <javac2 destdir="${partii.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.partii}/javac">
      <compilerarg line="${compiler.args.partii}"/>
      <bootclasspath refid="partii.module.bootclasspath"/>
      <classpath refid="partii.module.production.classpath"/>
      <src refid="partii.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.partii"/>
    </javac2>
    
    <copy todir="${partii.output.dir}">
      <fileset dir="${module.partii.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.partii.tests" depends="register.custom.compilers,compile.module.partii.production" description="compile module partII; test classes" unless="skip.tests"/>
  
  <target name="clean.module.partii" description="cleanup module">
    <delete dir="${partii.output.dir}"/>
    <delete dir="${partii.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.partii" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.partii" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>